<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/widget_list_item_vertical_padding"
    android:paddingEnd="@dimen/widget_list_item_horizontal_padding"
    android:paddingLeft="@dimen/widget_list_item_horizontal_padding"
    android:paddingRight="@dimen/widget_list_item_horizontal_padding"
    android:paddingStart="@dimen/widget_list_item_horizontal_padding"
    android:paddingTop="@dimen/widget_list_item_vertical_padding">

    <TextView
        android:id="@+id/text_ingredient_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textColor="@color/textColor_listView" />

    <!-- Can't have View or Space in layout for widgets, so this TextView effectively mocks them -->
    <TextView
        android:layout_width="@dimen/widget_space"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/text_ingredient_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:textColor="@color/textColor_listView" />

</LinearLayout>