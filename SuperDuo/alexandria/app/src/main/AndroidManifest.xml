<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.jaschke.alexandria" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true">

        <!-- For the barcode scanner -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />

        <!-- For the content provider -->
        <provider
            android:name="it.jaschke.alexandria.provider.BooksProvider"
            android:authorities="it.jaschke.alexandria.provider"
            android:exported="false" />

        <!-- Main activity -->
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Settings activity -->
        <activity
            android:label="@string/title_activity_settings"
            android:name=".SettingsActivity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- Barcode scanner activity -->
        <activity android:name=".BarcodeCaptureActivity"
                  android:label="@string/scan"/>

        <!--&lt;!&ndash; For the content provider &ndash;&gt;-->
        <!--<provider-->
            <!--android:name=".data.BookProvider"-->
            <!--android:authorities="it.jaschke.alexandria"-->
            <!--android:exported="false" />-->

        <!-- For interacting with the google books api -->
        <service
            android:name=".services.BookService"
            android:exported="false" >
        </service>

    </application>

</manifest>
