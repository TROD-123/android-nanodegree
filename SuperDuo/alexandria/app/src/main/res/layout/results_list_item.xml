<?xml version="1.0" encoding="utf-8"?>
<!-- TODO: Fix the ui layout and dimensions -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent" android:layout_height="80dp"
    android:minHeight="?android:attr/listPreferredItemHeightLarge"
    android:paddingStart="@dimen/results_list_item_horizontal_padding"
    android:paddingLeft="@dimen/results_list_item_horizontal_padding"
    android:paddingEnd="@dimen/results_list_item_horizontal_padding"
    android:paddingRight="@dimen/results_list_item_horizontal_padding"
    android:paddingTop="@dimen/results_list_item_vertical_padding"
    android:paddingBottom="@dimen/results_list_item_vertical_padding">

    <!-- Left column, Book thumbnail image -->
    <ImageView
        android:id="@+id/results_list_imageview_book_thumbnail"
        android:layout_width="0dp" android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        tools:src="@drawable/ic_action_accept"/>

    <!-- Right column, informational -->
    <LinearLayout
        android:layout_width="0dp" android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/results_list_textview_title"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="@string/tools_results_item_title"/>

        <TextView
            android:id="@+id/results_list_textview_author_date"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="@string/tools_results_item_author_date"/>

        <TextView
            android:id="@+id/results_list_textview_description"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="@string/tools_results_item_description"/>

    </LinearLayout>

</LinearLayout>