<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/chart_header_num_foods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 expiring foods"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chart_header_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimaryLight"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/chart_header_num_foods"
        app:layout_constraintTop_toBottomOf="@+id/chart_header_num_foods"
        android:text="Wed, Aug 29" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart_at_a_glance"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fab_chart_date_range" />

    <!-- Date range button // Makeshift extended fab -->
    <LinearLayout
        android:id="@+id/fab_chart_date_range"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_sq_rect"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/chart_at_a_glance"
        app:layout_constraintTop_toBottomOf="@+id/chart_header_date"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:elevation="@dimen/fab_elevation_rest"
        android:stateListAnimator="@animator/fab_elevation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:text="@string/at_a_glance_date_range_label"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="Wed, Aug 23 - Thu, Sep 10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>