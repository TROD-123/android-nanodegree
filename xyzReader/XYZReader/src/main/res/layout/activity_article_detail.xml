<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Since we're using translucent status bar, we need to "fill the gap". The height is
            set in the java code, since there is no public resource available for the status bar
            height-->
        <View
            android:id="@+id/gap_status_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <!-- This toolbar "container" only holds the up button and action overflow button. The title
            is set in each of the containing fragments -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/appbar_container_detail"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@android:color/transparent"
            app:contentInsetStart="0dp">

            <ImageButton
                android:id="@+id/ib_action_up"
                android:layout_width="56dp"
                android:layout_height="?actionBarSize"
                android:layout_gravity="bottom|start"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/up"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

            <ImageButton
                android:id="@+id/ib_action_menu"
                android:layout_width="56dp"
                android:layout_height="?actionBarSize"
                android:layout_gravity="bottom|end"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/moreActions"
                android:src="@drawable/ic_more_vert_white_24dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:visibility="gone" />

        </android.support.v7.widget.Toolbar>

    </LinearLayout>

</FrameLayout>