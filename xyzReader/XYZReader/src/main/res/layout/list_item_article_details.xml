<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/details_article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_padding_narrow"
        android:layout_marginTop="@dimen/card_padding_narrow"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/textColorDark"
        android:textSize="20sp"
        tools:text="Ebooks, Neither E, Nor Books" />

    <TextView
        android:id="@+id/article_body_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_padding_narrow"
        android:layout_marginTop="@dimen/card_padding_narrow"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/textColorMedium"
        android:textSize="14sp"
        tools:text="The Pixel 3 XL just popped up on Geekbench, so we can now set aside speculation on the specs. Microsoft will soon launch a new monthly charge for Windows 10." />

    <TextView
        android:id="@+id/article_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_padding_narrow"
        android:layout_marginTop="@dimen/card_padding_narrow"
        android:textColor="@color/textColorMedium"
        android:textSize="12sp"
        tools:text="January 12, 2019" />

</LinearLayout>