<!-- Referencing strings within string resources
     From: https://stackoverflow.com/questions/4746058/reference-one-string-from-another-string-in-strings-xml -->

<!DOCTYPE resources [<!ENTITY appName "XYZ Reader">]>

<resources>
    <string name="app_name">&appName;</string>
    <string name="message_welcome">Welcome to &appName;!</string>

    <string name="action_refresh">Refresh</string>
    <string name="action_settings">Settings</string>
    <string name="action_share">Share</string>

    <string name="up">Up</string>

    <string name="author_date" translatable="false">%1$s, %2$s</string>
    <string name="share_title">Share \"%1$s\"</string>
    <string name="share_message">Check out %1$s by %2$s! #&appName;</string>

    <string name="details_body_html_prefix" translatable="false">
        <![CDATA[
        <html>
        <head>
        <style type="text/css">
        @font-face {
        font-family: xyz;
        src: url("fonts/]]>%1$s<![CDATA[")
        }
        body {
        font-family: xyz
        text-align: ]]>%2$s<![CDATA[;
        margin: ]]>%3$d<![CDATA[;
        padding: ]]>%4$d<![CDATA[;
        color: ]]>%5$s<![CDATA[
        }
        </style>
        </head>
        <body>]]>
    </string>
    <string name="details_body_html_suffix" translatable="false">
        <![CDATA[
        </body>
        </html>
        ]]>
    </string>
    <string name="moreActions">More actions</string>
    <string name="sharedTransitionId_photo" translatable="false">photo_transition</string>
    <string name="null_data">No data</string>
    <string name="error_message_share">There was an error getting story info. Unable to share</string>
    <string name="log_error_share" translatable="false">There was an error getting story info for sharing: cursor is null</string>
    <string name="error_message_refresh">We had trouble loading your articles online</string>
    <string name="try_again">Try again</string>
    <string name="message_empty_article_list">Your articles list is empty.\nTry swiping down to load your articles.</string>
    <string name="shared_prefs">xyz_sp</string>

</resources>